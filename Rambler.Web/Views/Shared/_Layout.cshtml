<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Rambler: @ViewData["Title"]</title>
    <script src="~/components/webcomponentsjs/webcomponents.js"></script>

    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/bootstrap-base.css" />
    <link rel="stylesheet" href="~/css/bootstrap-tables.css" />
    <link rel="stylesheet" href="~/css/all.css" />

    <link rel="import" href="~/components/polymer/polymer.html" />
    <link rel="import" href="~/components/iron-icons/iron-icons.html" />
    <link rel="import" href="~/components/iron-icons/hardware-icons.html" />
    <link rel="import" href="~/components/iron-icons/communication-icons.html" />
    <link rel="import" href="~/components/iron-icons/social-icons.html" />
    <link rel="import" href="~/components/iron-icon/iron-icon.html" />
    <link rel="import" href="~/components/iron-icons/editor-icons.html" />
    <link rel="import" href="~/components/xenon-layout/nav-item.html" />
    <link rel="import" href="~/components/xenon-layout/xenon-search.html" />
    <link rel="import" href="~/components/xenon-layout/xenon-section.html" />
    <link rel="import" href="~/components/xenon-layout/xenon-field-group.html" />
    <link rel="import" href="~/components/xenon-layout/xenon-layout.html" />
    <link rel="import" href="~/components/xenon-photo-card/xenon-photo-card.html" />
    <link rel="import" href="~/components/paper-button/paper-button.html" />
    <link rel="import" href="~/components/paper-menu-button/paper-menu-button.html" />
    <link rel="import" href="~/components/paper-item/paper-item.html" />
    <link rel="import" href="~/components/paper-icon-button/paper-icon-button.html" />
    <link rel="import" href="~/components/paper-input/paper-input.html" />
</head>
<body>
    <xenon-layout heading="Rambler: @ViewData["Title"]">
        <header>
            <xenon-search></xenon-search>
            <div>@ViewData["username"]</div>
        </header>
        <nav>
            <nav-item icon="home" href="/">Home</nav-item>
            <nav-item icon="communication:chat" href="@Url.Action("Index", "Chat")">Chat</nav-item>
            <nav-item icon="social:people" href="@Url.Action("Index", "User")">Users</nav-item>
            <nav-item href="@Url.Action("Index", "Youtube")"><i class="fab fa-youtube fa-2x"></i> Youtube</nav-item>
            <nav-item href="@Url.Action("Index", "Twitch")"><i class="fab fa-twitch fa-2x"></i> Twitch</nav-item>
            <nav-item icon="settings" href="/Configuration">Configuration</nav-item>
            <nav-item icon="editor:text-fields" href="/Configuration/WordFilter">Word Filter</nav-item>
            <nav-item icon="social:people" href="@Url.Action("Index", "Author")">Author</nav-item>
            <nav-item icon="icons:android" href="/Configuration/Bot">Bot</nav-item>
            <nav-item icon="icons:exit-to-app" href="/Account/Logout">Logout</nav-item>
            @*<spacer></spacer>
        <img style="align-self: center;" src="ramblerlogo.png" />*@
        </nav>
        <main>
            <div style="display: flex; align-content: stretch; flex-direction: column;">
                @RenderBody()
                <div style="flex: 1 1 auto;"></div>
                <footer>
                    <p>&copy; 2019 - Machaqueso</p>
                </footer>
            </div>
        </main>
    </xenon-layout>

    @RenderSection("Scripts", required: false)
</body>
</html>