@model AccessToken

@{
    ViewData["Title"] = "Youtube Integration";
}

<link rel="import" href="/components/xenon-photo-card/xenon-photo-card.html" />
<link rel="import" href="/components/paper-toast/paper-toast.html" />
<link rel="import" href="/components/paper-button/paper-button.html" />

<dom-module id="page-module">
    <template>
        <xenon-photo-card heading="@ViewData["Title"]">
            <main>
                @if (Model != null)
                {
                    <div class="flex">
                        <div>Token Type : @Model.token_type</div>
                        <div>Expires in : @Model.expires_in (@((Model.ExpirationDate- DateTime.UtcNow).TotalSeconds)))</div>
                        <div>Expiration Date : @Model.ExpirationDate</div>
                        <div>Status: @Model.Status</div>
                        <div>Refresh Token?: @Model.HasRefreshToken</div>
                    </div>
                }
                else
                {
                    <div>Access token is null</div>
                }
            </main>
            <buttons>
                <a href="@Url.Action("Authorize")" tabindex="-1">
                    <paper-button>Authorize</paper-button>
                </a>
                <a href="@Url.Action("Broadcast")" tabindex="-1">
                    <paper-button>Broadcast</paper-button>
                </a>
                <a href="@Url.Action("Messages")" tabindex="-1">
                    <paper-button>Live Chat</paper-button>
                </a>
            </buttons>
        </xenon-photo-card>
        <paper-toast id="toast"></paper-toast>
    </template>
    <script>
        addEventListener('WebComponentsReady', function () {

            Polymer({
                is: "page-module",
                properties: {
                },
                observers: [
                ],
                ready: function () {
                }
            });
        })
    </script>
</dom-module>

<page-module></page-module>

