@model IEnumerable<Log>

@{
    ViewBag.Title = "Logs";
    Layout = "_Layout";
}

@section Styles{
    <link rel="stylesheet" href="~/css/bootstrap.css" />
}

<link rel="import" href="~/components/rambler-components/author-actions.html" />

<div class="card">
    <div class="card-body">
        <h5 class="card-title">@ViewBag.Title</h5>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Date</th>
                    <th>Level</th>
                    <th>Message</th>
                    <th>Exception</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Timestamp</td>
                        <td>@item.Level</td>
                        <td>@item.RenderedMessage</td>
                        <td>@item.Exception</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
